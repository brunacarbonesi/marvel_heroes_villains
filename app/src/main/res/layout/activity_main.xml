<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/heroes_villains_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonHeroes"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_heroes_vilains"
            android:text="HEROES"
            android:textColor="@color/colorType"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonVillains"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_heroes_vilains"
            android:gravity="center|center_vertical"
            android:shadowColor="@color/colorPrimary"
            android:text="VILLAINS"
            android:textColor="@color/colorType"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>


</RelativeLayout>