<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewHeroesBackground"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/captain_marvel_background" />

    <TextView
        android:id="@+id/textViewHeroesLV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:text="HEROES"
        android:textColor="@color/colorType"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewHeroesBackground"
        app:layout_constraintEnd_toEndOf="@+id/imageViewHeroesBackground"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewHeroesBackground"
        app:layout_constraintVertical_bias="0.499" />

</android.support.constraint.ConstraintLayout>